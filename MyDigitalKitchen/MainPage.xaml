<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDigitalKitchen.MainPage">

   <!--This is for the homepage where the user search recipes, view favorited, and view recent.-->
    
  
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25" HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
           
            <!--This section is for the search bar feature-->

            <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" > <!--Sets the entry and button next to each other-->
                <Entry
                    x:Name="SearchEntry"
                    Placeholder="Search Recipes..."
                    PlaceholderColor="Grey"
                    TextColor= "Black"
                    HorizontalOptions="FillAndExpand"
                   
                    />

                <Button
                    x:Name="SearchButton"
                    Text="Search"
                    Clicked="SearchButton_Clicked" 
                    HorizontalOptions="End"
                    />
            </HorizontalStackLayout>



            <!--This section is for the recent recipes-->
            <Label
                 x:Name="Recents"
                 Text="Recents"
                 TextColor="Black"
                 FontAttributes="Bold"
                 HorizontalOptions="FillAndExpand"/>

            <Border StrokeThickness="2" Stroke="#CCCCCC" Padding="10" BackgroundColor="White" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <CollectionView 
                x:Name="RecentRecipiesList"
                HeightRequest="150"
                HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}" FontSize="16" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </Border>


            <!--This section if for the favorite recipes-->
            <Label
                 x:Name="Favorites"
                 Text="Favorites"
                 TextColor="Black"
                 FontAttributes="Bold"
                 HorizontalOptions="FillAndExpand"/>

            <Border StrokeThickness="2" Stroke="#CCCCCC" Padding="10" BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <CollectionView 
                x:Name="FavoriteRecipiesList"
                HeightRequest="150"
                HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}" FontSize="16" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
