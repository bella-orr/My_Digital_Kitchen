<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDigitalKitchen.RecipeList"
             Title="Recipe List">

    <!--This is for the Recipe List page where the user can navigate to different recipes based on the first letter and can filter by more options.-->

    <ScrollView>
        <VerticalStackLayout Spacing="25" HorizontalOptions="FillAndExpand"
VerticalOptions="FillAndExpand" >
            
            <!--Filters by the Meal Type-->
            <Picker x:Name="MealTypePicker"
            Title="Filter by Meal Type"
            SelectedIndexChanged="MealTypePicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>All</x:String>
                        <x:String>Breakfast</x:String>
                        <x:String>Lunch</x:String>
                        <x:String>Dinner</x:String>
                        <x:String>Snack</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!--Filters by the data added-->
            <Picker x:Name="DateSortPicker"
            Title="Sort by Date"
            SelectedIndexChanged="DateSortPicker_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Newest First</x:String>
                        <x:String>Oldest First</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>




            <!--Creates each section for the alphabet-->
            <!--Need to set up models folder that will set up the components for the alphahbet-->
            <CollectionView 
                x:Name="LetterList"
                SelectionMode="Single"
                ItemsSource="{Binding GroupedRecipes}"
                HeightRequest="600">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <Button Command="{Binding ExpandCommand}" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" Text="{Binding Letter}" TextColor="Black" FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                            <CollectionView ItemsSource="{Binding Recipes}" Margin="10" IsVisible="{Binding IsExpanded}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Label Text="{Binding Recipe.Title}" FontSize="16" TextColor="Gray"/>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>


            </CollectionView>

            <!--This button is to help navigate between the pages for testing. It will be removed in the final state-->
            <Button 
                 x:Name="nextButton2"
                 Text="Next (Testing Button)"
                 HorizontalOptions="FillAndExpand"
                 Clicked="nextButton2_Clicked"/>

        


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>